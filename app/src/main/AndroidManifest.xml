        android:supportsRtl="true"
        android:theme="@style/Theme.OmanTravelGuide">
        <activity android:name=".TourBookingActivity"></activity>
        <activity android:name=".AdminDashboard" />
        <activity android:name=".AdminLoginAcitivity" />
        <activity android:name=".ChooseActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ToursimDeatilActivity" />
        <activity android:name=".BookingConfirmed" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".Booking_ConfirmationActivity" />
        <activity android:name=".TourismActivity" />
        <activity android:name=".HotelActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".ResetPasswordActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".PopularHotel" />
        <activity android:name=".ForgetActivity" />
        <activity
            android:name=".LoginAcitivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>